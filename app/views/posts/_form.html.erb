<div class="container pb-5">

	<%= simple_form_for @post do |f| %>

	    <%= f.input :title, label: 'Podaj tytuł:' %>
	    <%= f.input :description, label: 'Podaj treść:', as: :trix_editor%> 
	    <%= f.hidden_field :user_id, value: 1 %>
	    <%= link_to 'Powrót', posts_path, class: 'btn btn-info btn-lg' %><hr>
	   <div class="pb-5"> 
	   		<%= f.submit "Zapisz", class: 'btn btn-lg btn-success', style: "float:left" %>
	   </div>

	<% end %>
</div>