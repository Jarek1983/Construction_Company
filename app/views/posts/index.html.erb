<section class="container pt-5 pb-5">

    <h1 class="display-5 text-center text-primary">Aktualności</h1>

  <div class="row">

    <div class="px-2">

      <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

    </div>

      <div class="col-12">

            <% if current_user && current_user&.admin? %>

            <%= link_to 'Dodaj', new_post_path, class: "btn btn-primary btn-lg" %> <hr/>

            <% end %>

          <div class="row pb-5">
              <% @posts.each do |post| %>
                <div class="col-12 col-lg-4 p-2">
                  <div class="card p-2"> 
                          <div class="card-block text-center">
                               <h4 class="card-title text-center font-weight-bold pt-3">
                                  <%=post.title %>
                               </h4>
                               <p class="card-title text-justify mx-2">
                                  <%=sanitize post.description %>
                               </p>

                                <% if current_user && current_user&.admin? %>

                                  <div class="p-2">
                                    <%= link_to 'Pokaż', post_path(post), class: "btn btn-lg btn-primary" %>
                                    <%= link_to 'Edytuj', edit_post_path(post), class: "btn btn-lg btn-info" %>
                                    <%= link_to 'Usuń', post_path(post), method: :delete, data: {confirm: 'Czy na pewno usunąć?'}, class: "btn btn-lg btn-danger" %>
                                  </div>
                                <% end %>

                          </div>
                  </div>
                </div>
              <% end %>
          </div>

      </div>
  </div>
</section>

