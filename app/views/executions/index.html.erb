<section class="container pt-5 pb-5">
  <div class="row">

    <div class="p-2">

      <%= will_paginate @executions, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

    </div>
    
      <div class="col-12">

            <% if current_user && current_user&.admin? %>

            <%= link_to 'Dodaj', new_execution_path, class: "btn btn-primary btn-lg" %> <hr/>

            <% end %>

          <div class="row pb-5">
              <% @executions.each do |execution| %>
                <div class="col-12 col-lg-4 p-2">
                  <div class="card p-2"> 
                          <div class="card-block text-center">
                               <h4 class="card-title text-center text-capitalize font-weight-bold pt-3">
                                  <%=execution.name %>
                               </h4>
                               <p class="card-title text-justify mx-2">
                                  <%=sanitize execution.description %>
                               </p>                         

                                <% if current_user && current_user&.admin? %>

                                  <div class="p-2">
                                    <%= link_to 'Pokaż', execution_path(execution), class: "btn btn-lg btn-primary" %>
                                    <%= link_to 'Edytuj', edit_execution_path(execution), class: "btn btn-lg btn-info" %>
                                    <%= link_to 'Usuń', execution_path(execution), method: :delete, data: {confirm: 'Czy na pewno usunąć?'}, class: "btn btn-lg btn-danger" %>
                                  </div>

                                <% else %>

                                    <div class="p-2">

                                    <%= link_to 'Galeria', execution_path(execution), class: "btn btn-lg btn-primary" %>

                                    </div> 
                                    
                                <% end %>

                          </div>
                  </div>
                </div>
              <% end %>
          </div>

      </div>
  </div>

</section>
