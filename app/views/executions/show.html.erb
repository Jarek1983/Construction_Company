<section class="container pt-5 pb-5">
  <div class="row">
      <div class="col-12">

        <p class="text-center">
          <%= @execution.name %>
        </p>

        <p class="text-justify">
          <%=sanitize @execution.description %>
        </p>

      </div>
  </div>

  <div class="row">
      <div class="col-12 text-center">

       
          <% @execution.images.each do |image| %>

            <div class="p-2">

              <%= image_tag image.variant(resize:"450x450") %>

            </div>

            <div>
              
                <%= link_to 'Usuń', delete_image_attachment_execution_path(image), method: :delete, data: { confirm: 'Are you sure?' },
                class: "btn btn-lg btn-danger"  %>

            </div><hr>

          <% end %> 
        </div>
  </div>

  <div class="pb-5">
      <%= link_to 'Powrót', executions_path, class: 'btn btn-lg btn-success' %>

    <% if current_user && current_user&.admin? %>

      <%= link_to 'Edytuj', edit_execution_path(@execution), class: 'btn btn-lg btn-primary' %> 

    <% end %>
  </div>

</section>